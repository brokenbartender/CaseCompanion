{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "express",
      "multer"
    ]
  },
  "include": [
    "*.ts",
    "lib/**/*.ts",
    "middleware/**/*.ts",
    "prisma/**/*.ts",
    "../shared/**/*.ts"
  ]
}
